{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*":["src/*"],
    }
  },
  "exclude": [
    "node_modules",
  ]
}
